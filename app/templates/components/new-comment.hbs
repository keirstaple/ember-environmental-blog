{{#if addNewComment}}
<div>
  <form>
    <div class="form-group">
      <label for="name">Name:</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="date">Date:</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="comment">Comment:</label>
      {{textarea value=comment id="comment"}}
    </div>

    <button {{action 'saveComment'}}>Submit</button>
  </form>
</div>
{{else}}
  <button {{action 'commentFormShow'}}>Write Comment</button>
{{/if}}
