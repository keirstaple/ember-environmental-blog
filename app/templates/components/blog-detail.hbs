<h2>{{blog.title}} {{blog.author}}</h2>

<img src="{{blog.image}}" alt="{{blog.title}}" />
<p>
  {{blog.content}}
</p>

  <button {{action 'delete' blog}}>Delete Post</button>

  
  <ul>
    {{#each model.blog.comments as |comment|}}
      {{comment-tile comment=comment}}
    {{/each}}
  </ul>
  <hr>
