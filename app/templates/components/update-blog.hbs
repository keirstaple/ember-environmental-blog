{{#if updateBlogForm}}
<h4>Update {{blog.title}} by {{blog.author}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=blog.title}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=blog.author}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=blog.date}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=blog.image}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{textarea value=content id="content" placeholder=blog.content}}
        </div>

        <button {{action 'update' blog}}>Save Entry</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateBlogForm'}}>Update Entry</button>
{{/if}}
